        </activity>
        <activity
            android:name=".Challenge_Menu"
            android:label="@string/title_activity_challenge__menu"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Game"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Score_Menu"
            android:label="@string/title_activity_score__menu"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
